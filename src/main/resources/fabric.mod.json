{
	"schemaVersion": 1,
	"id": "blood_mending",
	"version": "${version}",
	"name": "Blood Mending",
	"description": "Enchantment that uses your health to repair",
	"authors": [
		"wdfeer"
	],
	"contact": {
		"homepage": "https://github.com/wdfeer/blood-mending",
		"sources": "https://github.com/wdfeer/blood-mending"
	},
	"license": "GPL-3.0",
	"icon": "assets/blood_mending/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "org.wdfeer.TheMod",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "org.wdfeer.BloodMendingClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"blood_mending.mixins.json",
		{
			"config": "blood_mending.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.15.11",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	}
}